{% extends '::base.html.twig' %}

{% block title %}
    KlikEvent :: {{pageTitle}}
{% endblock %}

{% block body %}




    {% for event in events %}
        <div class="row">
            <div class="span12">
      
                
                

                <div class="row">
                    <div class="span6">
                        <img src="/klikevent/web/{{event.eventCoverImage}}" class="image">
                    </div>
                    <div class="span6">
                        <div class="row">
                    
                            <a href="{{path ('KlikEventEventBundle_eventDetails_page', { 'id' : event.id })}}" class="no-style-link">
                                <h1 class=" add-bottom ">{{event.eventTitle}}</h1>
                            </a>
                        </div>
                        <div class="row">
                            <div class="span6  text-right category-bar">
                            {% for category in event.eventCategories %}
                                <div title="{{category.categoryName}}" class="{{category.categoryName}}">&nbsp;</div>
                            {% endfor %}
                            </div>
                        </div>
                        <div class="row">
                        <h3 class="description">
                        {% for time in event.eventTimes %}

                        {{time.begin | date('d M')}} &nbsp;&nbsp; 

                        {% endfor %}
                            <br/>
                        {{event.eventShortDescription}}
                        </h3>
                        </div>
                        <div class="row text-center add-top">
                            <div class="span6" style="">
                                <span class='st_facebook_hcount' st_url="http://www.klikevent.com/event/id/{{event.id}}" st_title="{{event.eventTitle}}" displayText='Facebook'></span>
                                <span class='st_twitter_hcount' st_url="http://www.klikevent.com/event/id/{{event.id}}" st_title="{{event.eventTitle}} via @KlikEventID #KlikEvent" displayText='Tweet'></span>
                                <span class='st_pinterest_hcount' st_url="http://www.klikevent.com/event/id/{{event.id}}" st_title="{{event.eventTitle}}" displayText='Pinterest'></span>
                            </div>
                        </div>
                        <div class="row add-top">
                            <div class="span6  text-right">
                                <a href="{{path ('KlikEventEventBundle_eventDetails_page', { 'id' : event.id })}}">
                                <button class="btn btn-xxlarge btn-primary">See Details</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <hr/>
    {% else %}
        Tidak ada event
    {% endfor %}

{% endblock %}